{
  "name": "__MSG_appName__",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/notebook-16.png",
    "64": "images/notebook-64.png",
    "128": "images/notebook-128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "images/notebook-128.png",
    "default_title": "My Secret Notes"
  },
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "permissions": [
    "background",
    "storage",
    "unlimitedStorage",
    "tabs",
    "notifications"
  ]
}
